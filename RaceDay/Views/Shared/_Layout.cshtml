@using RaceDay.Facebook
@{
    var user = FacebookUser.CurrentUser;
}
<!DOCTYPE html>
<html language="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/content/css")
    @RenderSection("styles", required: false)
</head>
<body>
    <div class="container-fluid">
        <div class="row header">
            <div class="col-md-12">
                <div class="page-header">
                    <a href="/">&nbsp;</a>
                    <h1>Race Day <small>A friendly way to see who is racing with @user.name</small></h1>
                </div>
            </div>
        </div>

        @RenderBody()
        <a id="fbMobile" href="https://app.workmanfamily.com/raceday/" target="_top" style="display: none;"></a>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script type="text/javascript">
        var ajaxUrls = { AttendingUrl: '@Url.Action(MVC.Home.Attending())', ParticipantsUrl: '@Url.Action(MVC.Home.Participants())', AjaxLoader : '@Url.Content("~/content/images/ajax-loader.gif")' };
    </script>
    @Scripts.Render("~/bundles/global")
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        $(document).ready(function () {
            if ((screen.width < 767) && (window != window.top))
                $('#fbMobile')[0].click();
        });
    </script>
</body>
</html>
